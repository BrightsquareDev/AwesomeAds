<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AwesomeAds Test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/frame_banner"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_banner"
            android:text="Load banner"
            />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:background="@drawable/ad_bg"
            android:id="@+id/frame_native_nomedia"
            android:layout_margin="@dimen/_5sdp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_native_nomedia"
            android:text="Load native no media"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"

            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/ad_bg"
            android:id="@+id/frame_native"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_native"
            android:text="Load native"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_inter"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Load Inter"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</ScrollView>